<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/txtRequestNamePro"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNoDPro"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtRequestNamePro"
            android:padding="3dp" />

        <TextView
            android:id="@+id/txtHero"
            android:layout_width="267dp"
            android:layout_below="@id/txtNoDPro"
            android:layout_height="wrap_content"
            android:padding="3dp" />

        <TextView
            android:id="@+id/estimatesTime"
            android:layout_below="@id/txtHero"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:padding="3dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>