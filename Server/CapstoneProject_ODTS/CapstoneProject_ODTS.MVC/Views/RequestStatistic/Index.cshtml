@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <style>
        .city {
            background-color: azure;
            color: black;
            padding: 1%;
            border-left: solid cadetblue;
            width: 100%;
            margin-left: 1%;
            font-family: Arial;
        }
    </style>
    <div class="row col-md-12">
        <h3 class="city">Thống Kê Dữ Liệu Sự Cố</h3>
    </div>

    <div class="col-md-6" style="margin-top: 10px">
        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title">Thống Kê Tổng Số Lần Hỗ Trợ Của Tất Cả Sự Cố</h3>

            </div>
            <div class="box-body">
                <div class="chart">
                    <canvas id="pie-chart" width="100%" height="60%"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6" style="margin-top: 10px">
        <div class="box box-success" style="height: 350px">
            <div class="box-header with-border">
                <h3 class="box-title">Thống Kê Trạng Thái Của Tất Cả Sự Cố</h3>

            </div>
            <div class="box-body">
                <div class="chart">
                    <div class="row col-md-6" style="margin-left:1%; margin-top: 8%">
                        <div class="info-box">
                            <span class="info-box-icon bg-yellow"><i class="fa fa-cogs" aria-hidden="true"></i></span>

                            <div class="info-box-content">
                                <span class="info-box-text">Chờ xử lý</span>
                                <span class="info-box-number" id="wailting">0</span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                        <!-- /.info-box -->
                    </div>
                    <!-- /.col -->
                    <div class="row col-md-6" style="margin-left:2%; margin-top: 8%">
                        <div class="info-box">
                            <span class="info-box-icon bg-primary"><i class="fa fa-wrench" aria-hidden="true"></i></span>

                            <div class="info-box-content">
                                <span class="info-box-text">Đang xử lý</span>
                                <span class="info-box-number" id="processing">0</span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                        <!-- /.info-box -->
                    </div>

                    <div class="row col-md-6" style="margin-left:1%; margin-top: 2%">
                        <div class="info-box">
                            <span class="info-box-icon bg-green"><i class="fa fa-check" aria-hidden="true"></i></span>

                            <div class="info-box-content">
                                <span class="info-box-text">Hoàn thành</span>
                                <span class="info-box-number" id="done">0</span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                        <!-- /.info-box -->
                    </div>
                    <!-- /.col -->
                    <div class="row col-md-6" style="margin-left:2%; margin-top: 2%">
                        <div class="info-box">
                            <span class="info-box-icon bg-red"><i class="fa fa-times" aria-hidden="true"></i></span>

                            <div class="info-box-content">
                                <span class="info-box-text">Hủy bỏ</span>
                                <span class="info-box-number" id="cancel">0</span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                        <!-- /.info-box -->
                    </div>
                    <!-- /.col -->
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12" style="margin-top:10px">
        <div style="margin-bottom:10px">
            <h4>Thống Kê Dữ Liệu Sự Cố Theo Tháng:</h4>
        </div>
        <div style="width:500px; height:60px;">
            <input type="button" id="pickMonth" class="form-control" style="float: left;width:200px;display: inline-block;height:35px;border:solid 1px blue;text-align:left;" required>
            <div style="overflow: hidden">
                <button type="button" class="btn btn-primary fa fa-eye" style="display: inline-block;height:36px;margin-left:10px;" onclick="beginStatisticITS()"><font face="verdana"> Xem Thống Kê</button>
            </div>
        </div>
    </div>
    <div class="row col-md-12" style="margin-left: 0.2%; margin-top: 10px">
        <table id="detail-table" class="table table-hover" cellspacing="0" style="table-layout: auto">
            <thead>
                <tr>
                    <th><label>STT</label></th>
                    <th><label>Tên</label></th>
                    <th><label>Thời gian</label></th>
                    <th><label>Tạo bởi</label></th>
                    <th><label>Trạng thái</label></th>
                    <th><label>Xử lý bởi</label></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

</section>


