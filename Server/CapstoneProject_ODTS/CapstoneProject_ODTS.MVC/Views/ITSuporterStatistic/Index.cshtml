@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <style>
        .city {
            background-color: azure;
            color: black;
            padding: 1%;
            border-left: solid cadetblue;
            width: 100%;
            margin-left: 1%;
            font-family: Arial;
        }
    </style>
    <div class="row col-md-12">
        <h3 class="city">Thống Kê Dữ Liệu Của Nhân Viên</h3>
    </div>
    <div class="col-md-6" style="margin-top: 10px">
        <div class="box box-success">
            <div class="box-header with-border">
                <h4 class="box-title">Tổng Thời Gian Hỗ Trợ Các Loại Dịch Vụ Của Tất Cả Nhân Viên</h4>

            </div>
            <div class="box-body">
                <div class="chart">
                    <canvas id="bar-chart" width="100%" height="60%"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6" style="margin-top: 10px">
        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title">Tổng Số Lần Hủy Và Hỗ Trợ Của Tất Cả Nhân Viên</h3>

            </div>
            <div class="box-body">
                <div class="chart">
                    <canvas id="doughnut-chart" width="100%" height="60%"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12" style="margin-top:10px">
        <div style="margin-bottom:10px">
            <h4>Thống Kê Dữ Liệu Của Nhân Viên Theo Tháng:</h4>
        </div>
        <div style="width:500px; height:60px;">
            <input type="button" id="pickMonth" class="form-control" style="float: left;width:200px;display: inline-block;height:35px;border:solid 1px blue;text-align:left;" required>
            <div style="overflow: hidden">
                <button type="button" class="btn btn-primary fa fa-eye" style="display: inline-block;height:36px;margin-left:10px;" onclick="beginStatisticITS()"><font face="verdana"> Xem Thống Kê</button>
            </div>
        </div>
    </div>
    <div class="row col-md-12" style="margin-left: 0.2%">
        <table id="detail-table" class="table table-hover" cellspacing="0" style="table-layout: auto">
            <thead>
                <tr>
                    <th><label>STT</label></th>
                    <th><label>Tên Nhân Viên</label></th>
                    <th><label>Số Lần Hỗ Trợ</label></th>
                    <th><label>Số lần Hủy</label></th>
                    <th><label>Thời Gian Hỗ Trợ</label></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

</section>



