    <script>
        $(document).ready(function () {
            loadData();
            loadITSup();
        });

        function loadITSup() {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetAllITSupporter", "ITSupporter")',
                data: {
                },
                success: function (result) {
                    initDatatable(result.result.ObjReturn);
                },
                error: function(error) {
                    showMessage("Cõ lỗi xảy ra. Vui lòng thử lại sau.", "error", "OK");
                }
            });
        }
         function initDatatable(data) {
            if (data == null) {
                $('#detail-table').dataTable().fnClearTable();
            }
            $("#detail-table").dataTable().fnDestroy();
            $("#detail-table").dataTable({
                stateSave: true,
                "bFilter": true,
                "bSort": false,
                "data": data,
                "bRetrieve": true,
                "bScrollCollapse": true,
                "bProcessing": true,
                "oLanguage": {
                    "sSearch": "Tìm kiếm:",
                    "sSearchPlaceholder": "",
                    "sZeroRecords": "Không có dữ liệu phù hợp",
                    "sInfo": "Hiển thị từ _START_ đến _END_ trên tổng số _TOTAL_ dòng",
                    "sEmptyTable": "Không có dữ liệu",
                    "sInfoFiltered": " - lọc ra từ _MAX_ dòng",
                    "sLengthMenu": "Hiển thị _MENU_ dòng",
                    "sProcessing": "Đang xử lý...",
                    "oPaginate": {
                        "sNext": "<i class='fa fa-chevron-right'></i>",
                        "sPrevious": "<i class='fa fa-chevron-left'></i>"
                    }
                },
                "aoColumnDefs": [
                    {
                        "aTargets": [0, 1, 2,3,4],
                        "bSortable": false,
                        "sClass": "text-center"
                    },
                ],
                "columns": [
                    { "data": "ITSupporterName" },
                    { "data": "ITSupporterName" },
                    { "data": "ITSupporterName" },
                    { "data": "Username" },
                    { "data": "IsOnline" },

                ],
                "bAutoWidth": false,
            });
        }
        function getData(idd) {

            $.ajax({
                url: '@Url.RouteUrl(new {action = "ITSuppoterStatisticAll", controller = "ITSupporter" })',

                data: {
                    company_id: idd
                },
                type: 'GET',
                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $("#comName").text(data.result.ObjReturn.CompanyName);
                    $("#comDescription").text(data.result.ObjReturn.Description);
                    $("#comCreateDate").text(data.result.ObjReturn.CreateDate);
                    $("#comUpdateDate").text(data.result.ObjReturn.UpdateDate);
                    $("#viewPercentForITSupporterRate").text(data.result.ObjReturn.PercentForITSupporterRate);
                    $("#viewPercentForITSupporterExp").text(data.result.ObjReturn.PercentForITSupporterExp);
                    $("#viewPercentForITSupporterFami").text(data.result.ObjReturn.PercentForITSupporterFamiliarWithAgency);
                }
                });
            $('#ViewModal').modal('show');
        }
        function loadData() {
             $.ajax({
                    type: 'GET',
                    url: '@Url.Action("ITSuppoterStatistic", "ITSupporter")',
                 data: {
                     "itsupporterId": 1
                    },
                    success: function (result) {
                        loadDoughnutChart(result.result.TotalTimeEveryService);
                        loadBarChart(result.result.TotalTimeEveryService);
                    },
                    error: function(error) {
                       showMessage("Cõ lỗi xảy ra. Vui lòng thử lại sau.", "error", "OK");
                    }
            });
        }
        $('#pickMonth').datepicker({
            format: 'mm/yyyy',
            viewMode: "months",
            minViewMode: "months",
            autoclose: true,
            forceParse: false,
            language: 'vi'
        })

        /*
     * BAR CHART
     * ---------
     */
        function loadBarChart(data) {
            var i;
            var arr = [];
            for (i = 0; i < data.length; ++i) {
                arr.push(data[i].ServiceName);
            }

            var j;
            var arr2 = [];
            for (j = 0; j < data.length; ++j) {
                arr2.push(data[j].SupportTimeByHour);
            }
            var options = {
                responsive: true,
                scales: {
                    yAxes: [{
                        display: true,
                        ticks: {
                            beginAtZero: true,
                            min: 0
                        }
                    }]
                },
                title: {
                    display: true,
                    text: name
                },
                tooltips: {
                    mode: 'index',
                    intersect: false,
                },
                hover: {
                    mode: 'nearest',
                    intersect: true
                },
                legend: { display: false },
                title: {
                    display: true,

                }
            };
            new Chart(document.getElementById("bar-chart"), {
                type: 'bar',
                data: {
                    labels: arr,
                    datasets: [
                        {
                            label: "Population (millions)",
                            backgroundColor: ["#3e95cd", "#8e5ea2", "#3cba9f", "#e8c3b9", "#c45850"],
                            data: arr2
                        }
                    ]
                },
                options: options
            });
        }
    /* END BAR CHART */
        
        function loadDoughnutChart(data) {
            var i;
            var arr = [];
            for (i = 0; i < data.length; ++i) {
                arr.push(data[i].ServiceName);
            }

            var j;
            var arr2 = [];
            for (j = 0; j < data.length; ++j) {
                arr2.push(data[j].SupportTimeByHour);
            }
            new Chart(document.getElementById("doughnut-chart"), {
                type: 'doughnut',
                data: {
                    labels: ["Africa", "Asia"],
                    datasets: [
                        {
                            label: "Population (millions)",
                            backgroundColor: ["#0099ff", "#ff4d4d"],
                            data: [100,20]
                        }
                    ]
                },
                options: {
                    legend: {
                        display: true
                    },
                    tooltips: {
                        enabled: true
                    },
                    title: {
                        display: false,
                        text: 'Predicted world population (millions) in 2050'
                    }
                }
            });
        }
        function beginStatisticITS() {

            if ($('#pickmonth').val() == null) {
                swal({
                    title: 'bạn chưa chọn tháng để thống kê',
                    text: "vui lòng chọn tháng cần thống kê!",
                    type: 'warning',
                    confirmbuttontext: 'ok'
                })
                showstatisticits();
            }
        }

        function showstatisticits(idd) {
                var contract_id = $('#contractHidden').val();
                $.ajax({
                    type: 'GET',

                    url: '@Url.Action("RemoveContract", "Contract")',

                data: {
                        contract_id: contract_id
                    },
                datatype: 'json',
                contenttype: "application/json; charset=utf-8",
                success: function (data) {
                    $("#concompany").text(data.result.objreturn.companyname);
                    $("#conname").text(data.result.objreturn.contractname);
                    $("#servicename").text(data.result.objreturn.servicename);
                    $("#constartdate").text(data.result.objreturn.startdate);
                    $("#conenddate").text(data.result.objreturn.enddate);
                    $("#conupdatedate").text(data.result.objreturn.updatedate);
                }
            });
            $('#viewmodal').modal('show');
        }
    </script>

