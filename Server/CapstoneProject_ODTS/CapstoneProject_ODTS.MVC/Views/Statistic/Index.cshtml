@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="col-md-12">
        <div class="col-md-6">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title">Biểu Đồ Thông Kê Thời Gian Hỗ Trợ Của Các Dịch Vụ</h3>


                </div>
