<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts {
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdn.rawgit.com/asvd/dragscroll/master/dragscroll.js"></script>
    <script src="~/AdminLTE/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/AdminLTE/bower_components/select2/dist/js/select2.js"></script>
    <link href="~/AdminLTE/bower_components/select2/dist/css/select2.css" rel="stylesheet" />
    <script src="~/AdminLTE/bower_components/select2/dist/js/select2.js"></script>

    <script>
    $(document).ready(function () {
        loadContract();
        showCompany();
        showSupportService();
        getComName();
    });
    $('#test').select2({
        dropdownParent: $('#CreateModal')
        });
    $('#testE').select2({
        dropdownParent: $('#EditModal')
    });
    function loadContract() {
        $.ajax({
        type: 'POST',
        url: '@Url.Action("GetAllContract",  "Company", new { company_id = dataContract })',
        data: {
        },
        success: function (result) {
            initDatatable(result.result.ObjReturn);
        },
        error: function (error) {
            showMessage("Cõ lỗi xảy ra. Vui lòng thử lại sau.", "error", "OK");
        }
        });
    }
    function initDatatable(data) {
        if (data == null) {
                $('#detail-table').dataTable().fnClearTable();
            }
        $("#detail-table").dataTable().fnDestroy();
        $("#detail-table").dataTable({
            stateSave: true,
            "bFilter": true,
            "bSort": false,
            "data": data,
            "bRetrieve": true,
            "bScrollCollapse": true,
            "bProcessing": true,
            "oLanguage": {
                "sSearch": "Tìm kiếm:",
                "sSearchPlaceholder": "",
                "sZeroRecords": "Không có dữ liệu phù hợp",
                "sInfo": "Hiển thị từ _START_ đến _END_ trên tổng số _TOTAL_ dòng",
                "sEmptyTable": "Không có dữ liệu",
                "sInfoFiltered": " - lọc ra từ _MAX_ dòng",
                "sLengthMenu": "Hiển thị _MENU_ dòng",
                "sProcessing": "Đang xử lý...",
                "oPaginate": {
                    "sNext": "<i class='fa fa-chevron-right'></i>",
                    "sPrevious": "<i class='fa fa-chevron-left'></i>"
                }
            },
            "aoColumnDefs": [
                {
                    "aTargets": [0, 1, 2, 3, 4 ,5],
                    "bSortable": false,
                    "sClass": "text-center"
                },
            ],
            "columns": [
                { "data": "NumericalOrder" },
                { "data": "CompanyName" },
                { "data": "ContractName" },
                { "data": "StartDate" },
                { "data": "EndDate" },
                {
                    "aTargets": [5],
                    "mRender": function (data, type, full) {
                        var view = ' <button type="button" class="btn btn-info fa fa-eye" data-toggle="modal" data-target="" onclick="getData(' + full.ContractId + ')"></button>';
                        var edit = ' <button type="button" class="btn btn-warning fa fa-pencil" data-toggle="modal" data-target="" onclick="getDataEdit(' + full.ContractId + ')"></button>';
                        var del = ' <button type="button" class="btn btn-danger fa fa-trash" data-toggle="modal" data-target="" onclick="removeContract(' + full.ContractId + ')"></button>';
                        return view + " " + edit + " " + del;
                    }
                },
            ],
            "bAutoWidth": false,
        });
    }
    function showCreateModal() {
        $('#CreateModal').modal('show');
    }
    function clearModal() {
        $('#CreateModal').on('hidden.bs.modal', function (e) {
            $(this)
                .find("input,textarea")
                .val('')
                .end()
                .find("input[type=checkbox], input[type=radio]")
                .prop("checked", "")
                .end();
        })
    }

    function getComName() {

            $.ajax({
                url: '@Url.RouteUrl(new { action = "ViewDetail", controller = "Company" })',

                data: {
                    company_id: @dataContract
                },
                type: 'GET',
                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    var html = '';
                    html = 'Tất Cả Hợp Đồng Của Công Ty ' + data.result.ObjReturn.CompanyName;
                    $('#comNameShow').append(html);
                }
                });
        }

    function showCompany() {
        $('#comboCompany, #comboCompanyE')
            .find('option')
                    .remove()
                    .end();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetCompanyDetail", "Company", new { company_id = dataContract })',
                data: {
                },

                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function(data) {
                    //$('#createAgency').modal('show');
                    var len = data.result.ObjReturn.length;
                    var html = '';
                    for (var i = 0; i < len; i++) {
                        html += '<option value="' +
                            data.result.ObjReturn[i].CompanyId +
                            '">' +
                            data.result.ObjReturn[i].CompanyName +
                            '</option>';
                    }
                $('#comboCompany').append(html);
                $('#comboCompanyE').append(html);
            }
        });
    }
    function showSupportService() {
        $('#test,#testE')
        .find('option')
                .remove()
                .end();
        $.ajax({
            type: 'GET',
            url: '@Url.RouteUrl(new {action = "GetAllServiceITSupport", controller = "ServiceITSupport" })',
            data: {
            },

            dataType: 'json',
            contentType: "application/json; charset=utf-8",
            success: function(data) {
                //$('#createAgency').modal('show');
                var len = data.result.ObjReturn.length;
                var html = '';
                for (var i = 0; i < len; i++) {
                    html += '<option value="' +
                        data.result.ObjReturn[i].ServiceITSupportId +
                        '">' +
                        data.result.ObjReturn[i].ServiceName +
                        '</option>';
                }
                $('#test').append(html);
                $('#testE').append(html);
        }
    });
    }
    
    function getData(idd) {

        $.ajax({

            url: '@Url.RouteUrl(new {action = "ViewDetail", controller = "Contract"})',

            data: {
                contract_id: idd
            },
            type: 'GET',
            dataType: 'json',
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $("#conCompany").text(data.result.ObjReturn.CompanyName);
                $("#conName").text(data.result.ObjReturn.ContractName);
                $("#ServiceName").text(data.result.ObjReturn.ServiceName);
                $("#conStartDate").text(data.result.ObjReturn.StartDate);
                $("#conEndDate").text(data.result.ObjReturn.EndDate);
                $("#conUpdateDate").text(data.result.ObjReturn.UpdateDate);
            }
        });
        $('#ViewModal').modal('show');
    }
    $('#createDate').datepicker({
        format: 'dd/mm/yyyy',
        autoclose: true,
        forceParse: false,
    })
    $('#endDate').datepicker({
        format: 'dd/mm/yyyy',
        autoclose: true,
        forceParse: false,
    })
    $('#conStartDateE').datepicker({
        format: 'dd/mm/yyyy',
        autoclose: true,
        forceParse: false,
    })
    $('#conEndDateE').datepicker({
        format: 'dd/mm/yyyy',
        autoclose: true,
        forceParse: false,
    })

    function getDataEdit(id) {
        $.ajax({
            url: '@Url.RouteUrl(new {action = "ViewDetail", controller = "Contract" })',
            data: {
                contract_id: id
            },
            type: 'GET',
            dataType: 'json',
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                var arr = data.result.ObjReturn.ServiceIdList;               
                var arr2 = [];               
                var i;
                for (i = 0; i < arr.length; i++) {
                    arr2.push(arr[i].toString());
                }
                $("#id").val(data.result.ObjReturn.ContractId);
                $("#comboCompanyE").val(data.result.ObjReturn.CompanyId);
                $('#testE').select2().val(arr2).trigger('change');
                $("#conNameE").val(data.result.ObjReturn.ContractName);
                $("#conStartDateE").val(data.result.ObjReturn.StartDate);
                $("#conEndDateE").val(data.result.ObjReturn.EndDate);
            }
        });
        $('#EditModal').modal('show');
    }
    function UpdateContract() {
        var empObj = {
            ContractId: $('#id').val(),
            ContractName: $('#conNameE').val(),
            ServiceIdList: $('#testE').val(),
            StartDate: $('#conStartDateE').val(),
            EndDate: $('#conEndDateE').val(),
        }
        $.ajax({
            type: 'POST',

            url: '@Url.Action("UpdateContract", "Contract")',

            data: JSON.stringify(empObj),
            dataType: 'json',
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $('#EditModal').modal('hide');
                if (!data.result.isError) {
                    swal(data.result.SuccessMessage, "", "success");
                }
                else
                    swal(data.result.WarningMessage, "", "error");
                loadContract();
            }
        });
    }
    function createContracttt() {
        var empObj = {
            CompanyId: $('#comboCompany').val(),
            ContractName: $('#conNameCreate').val(),
            ServiceIdList: $('#test').val(),
            StartDate: $('#createDate').val(),
            EndDate: $('#endDate').val(),
        }
        $.ajax({
            type: 'POST',
            url: '@Url.Action("CreateContract", "Contract")',
        data: JSON.stringify(empObj),
            dataType: 'json',
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                if (!data.result.isError) {
                    $('#CreateModal').modal('hide');
                    clearModal();
                    loadContract();
                    swal(data.result.SuccessMessage, "", "success");
                }
                else
                    swal(data.result.WarningMessage, "", "error");
            }
        });
    }
    function removeContract(id) {
        swal({
            title: 'Bạn có Chắc Chắn Muốn Xóa?',
            text: "Dữ Liệu Đã Xóa Không Thể Hoàn Lại!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'Quay Lại',
            confirmButtonText: 'Chấp Nhận Xóa!'
        }).then(function () {
            deleteContract();
            swal(
                'Đã Xóa!',
                'Dữ Liệu Của Bạn Đã Được Xóa.',
                'success'
            )
        });
        $('#contractHidden').val(id);
    }
    function deleteContract() {
        var contract_id = $('#contractHidden').val();
        $.ajax({
            type: 'GET',

            url: '@Url.Action("RemoveContract", "Contract")',

        data: {
                contract_id: contract_id
            },

            dataType: 'json',
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $('#modalConfirmDelete').modal('hide')
                loadContract();
            }
        });
    }

    </script>

}

