<div class="container">
    <!-- Modal -->
    <div class="modal fade" id="ViewModal" tabindex="-1" role="dialog" aria-labelledby="exampleLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title"><b>Thông tin chi tiết</b></h3>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <b>Tên Công Ty:</b><br>
                            <p id="conCompany"></p>
                        </div>
                        <div class="col-md-12" style="margin-top:10px">

                            <b>Mô Tả Hợp Đồng:</b><br>
                            <p id="conName"></p>
                        </div>
                        <div class="col-md-12" style="margin-top:10px">

                            <b>Dịch Vụ Sử Dụng:</b><br>
                            <p id="ServiceName"></p>
                        </div>
                        <div class="col-md-12" style="margin-top:10px">
                            <b>Ngày Bắt Đầu:</b><br>
                            <p id="conStartDate"></p>
                        </div>
                        <div class="col-md-12" style="margin-top:10px">
                            <b>Ngày Hết Hạn:</b><br>
                            <p id="conEndDate"></p>
                        </div>
                        <div class="col-md-12" style="margin-top:10px">
                            <b>Lần Chỉnh Sửa Cuối:</b><br>
                            <p id="conUpdateDate"></p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="contractHidden" />
<form onsubmit="createContracttt(); return false">
    <div class="container">
        <!-- Modal -->
        <div class="modal fade2" id="CreateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title"><b>Tạo hợp đồng mới</b></h3>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <b>Tên Công Ty:</b><br>
                                <select class="form-control select2" id="comboCompany" disabled="disabled"></select>
                            </div>
                            <div class="col-md-12" style="margin-top:10px">
                                <b>Mô Tả Hợp Đồng:</b><br>
                                <input class="form-control" type="text" id="conNameCreate">
                            </div>
                            <div class="col-md-12" style="margin-top:10px">
                                <b>Dịch Vụ Đăng Ký:</b><br>
                                <select multiple class="form-control select2" style="width: 100%;" id="test"></select>
                            </div>
                            <div class="col-md-12" style="margin-top:10px">
                                <b>Ngày Bất Đầu:</b><br>
                                <input type="button" style="text-align: left" id="createDate" class="form-control" required>
                            </div>
                            <div class="col-md-12" style="margin-top:10px">
                                <b>Ngày Hết Hạn:</b><br>
                                <input type="text" id="endDate" class="form-control" required>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="clearModal()">Đóng</button>
                        <button type="submit" class="btn btn-primary">Tạo Mới</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<form onsubmit="UpdateContract(); return false">
    <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title"><b>Chỉnh sửa thông tin</b></h3>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <input type="hidden" id="id" />
                        <div class="col-md-12">
                            <b>Tên Công Ty:</b><br>
                            <select class="form-control select2" id="comboCompanyE" disabled="disabled"></select>
                        </div>
                        <div class="col-md-12" style="margin-top:10px">
                            <b>Mô Tả Hợp Đồng:</b><br>
                            <input class="form-control" type="text" id="conNameE">
                        </div>
                        <div class="col-md-12" style="margin-top:10px">
                            <b>Dịch Vụ Đăng Ký:</b><br>
                            <select multiple class="form-control select2" style="width: 100%;" id="testE"></select>
                        </div>
                        <div class="col-md-12" style="margin-top:10px">
                            <b>Ngày Bất Đầu:</b><br>
                            <input type="text" id="conStartDateE" class="form-control" required>
                        </div>
                        <div class="col-md-12" style="margin-top:10px">
                            <b>Ngày Hết Hạn:</b><br>
                            <input type="text" id="conEndDateE" class="form-control" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary">Chỉnh Sửa</button>
                </div>
            </div>
        </div>
    </div>
</form>
