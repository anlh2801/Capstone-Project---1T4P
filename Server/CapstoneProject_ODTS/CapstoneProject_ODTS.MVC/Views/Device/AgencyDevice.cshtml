</div>
<div class="row col-md-12">
    <h3>Tất Cả Thiết Bị</h3>
    <table id="detail-table" class="table table-hover" cellspacing="0" style="table-layout: auto">
        <thead>
            <tr>
                <th><label>STT</label></th>
                <th><label>Tên Thiết Bị</label></th>
                <th><label>Mã Thiết Bị</label></th>
                <th><label>Ngày Ký Bảo Hành</label></th>
                <th><label>Hạn Bảo Hành</label></th>
                <th><label>Ngày Lắp</label></th>
                <th><label>Chức Năng</label></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
    <div class="NewThing">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="" onclick="showCreateModal()">Tạo Thiết Bị</button>
        <button type="button" class="btn btn-primary fa fa-mail-reply-all" data-toggle="modal" data-target="" onclick="window.history.go(-1); return false;"><font face="verdana"> Quay Lại Trang Chi Nhánh</button>
    </div>
</div>

<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts {
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script type="text/javascript" src="https://cdn.rawgit.com/asvd/dragscroll/master/dragscroll.js"></script>
<script src="~/AdminLTE/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script>
        $(document).ready(function () {
            loadDevice();
            showCompany();
            showDeviceType();
        });

        function loadDevice() {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetAllDevice", "Agency", new { agency_id = dataAgency })',
                data: {
                },
                success: function(result) {
                    initDatatable(result.result.ObjReturn);
                },
                error: function(error) {
                    showMessage("Cõ lỗi xảy ra. Vui lòng thử lại sau.", "error", "OK");
                }
            });
        }
        function initDatatable(data) {
            $("#detail-table").dataTable().fnDestroy();
            $("#detail-table").dataTable({
                stateSave: true,
                "bFilter": true,
                "bSort": false,
                "data": data,
                "bRetrieve": true,
                "bScrollCollapse": true,
                "bProcessing": true,
                "oLanguage": {
                    "sSearch": "Tìm kiếm:",
                    "sSearchPlaceholder": "Thành phần con",
                    "sZeroRecords": "Không có dữ liệu phù hợp",
                    "sInfo": "Hiển thị từ _START_ đến _END_ trên tổng số _TOTAL_ dòng",
                    "sEmptyTable": "Không có dữ liệu",
                    "sInfoFiltered": " - lọc ra từ _MAX_ dòng",
                    "sLengthMenu": "Hiển thị _MENU_ dòng",
                    "sProcessing": "Đang xử lý...",
                    "oPaginate": {
                        "sNext": "<i class='fa fa-chevron-right'></i>",
                        "sPrevious": "<i class='fa fa-chevron-left'></i>"
                    }
                },
                "aoColumnDefs": [
                    {
                        "aTargets": [0, 1, 2, 3, 4, 5,6],
                        "bSortable": false,
                        "sClass": "text-center"
                    },
                ],
                "columns": [
                    { "data": "DeviceId" },
                    { "data": "DeviceName" },
                    { "data": "DeviceCode" },
                    { "data": "GuarantyStartDate" },
                    { "data": "GuarantyEndDate" },
                    { "data": "CreateDate" },
                    {
                        "aTargets": [6],
                        "mRender": function (data, type, full) {
                            var view = ' <button type="button" class="btn btn-info fa fa-eye" data-toggle="modal" data-target="" onclick="getData(' + full.DeviceId + ')"></button>';
                            var edit = ' <button type="button" class="btn btn-warning fa fa-pencil" data-toggle="modal" data-target="" onclick="getDataEdit(' + full.DeviceId + ')"></button>';
                            var del = ' <button type="button" class="btn btn-danger fa fa-trash" data-toggle="modal" data-target="" onclick="removeAgency(' + full.DeviceId + ')"></button>';
                            return view + " " + edit + " " + del;
                        }
                    },
                ],
                "bAutoWidth": false,
            });
        }
        function showCreateModal() {
            $('#CreateModal').modal('show');
        }
        function showCompany() {
            $('#comboCompany, #comboCompanyE')
                .find('option')
                .remove()
                .end();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetAllCompany", "Home")',
                data: {
                },

                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function(data) {
                    var obj = data.result.ObjReturn;
                    var html = '';
                    for (var i = 0; i < obj.length; i++) {
                        html += '<option value="' +
                            obj[i].CompanyId +
                            '">' +
                            obj[i].CompanyName
                            '</option>';
                    }
                    $('#comboCompany').append(html);
                    $('#comboCompanyE').append(html);
                }
            });
        }
        function showDeviceType() {
            $('#comboDeviceType, #comboDeviceTypeE')
                .find('option')
                .remove()
                .end();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetAllDeviceType", "DeviceType")',
                data: {
                },

                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function(data) {
                    var obj = data.result.ObjReturn;
                    var html = '';
                    for (var i = 0; i < obj.length; i++) {
                        html += '<option value="' +
                            obj[i].DeviceTypeId +
                            '">' +
                            obj[i].DeviceTypeName
                            '</option>';
                    }
                    $('#comboDeviceType').append(html);
                    $('#comboDeviceTypeE').append(html);
                }
            });
        }
        function getData(idd) {

            $.ajax({
                url: '@Url.RouteUrl(new {action = "ViewDetail", controller = "Device"})',

                data: {
                    device_id: idd
                },
                type: 'GET',
                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $("#dvName").text(data.result.ObjReturn.DeviceName);
                    $("#dvType").text(data.result.ObjReturn.DeviceTypeName);
                    $("#dvCode").text(data.result.ObjReturn.DeviceCode);
                    $("#dvGDate").text(data.result.ObjReturn.GuarantyStartDate);
                    $("#dvEndDate").text(data.result.ObjReturn.GuarantyEndDate);
                    $("#dvIp").text(data.result.ObjReturn.Ip);
                    $("#dvPort").text(data.result.ObjReturn.Port);
                    $("#dvAcc").text(data.result.ObjReturn.DeviceAccount);
                    $("#dvPass").text(data.result.ObjReturn.DevicePassword);
                    $("#dvSetupDate").text(data.result.ObjReturn.SettingDate);
                    $("#dvOther").text(data.result.ObjReturn.Other);
                    $("#dvLastEdit").text(data.result.ObjReturn.UpdateDate);
                }
            });
        $('#ViewModal').modal('show');
            }
        $('#dvGDateC').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true,
            forceParse: false,
            })
        $('#dvGEndDateC').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true,
            forceParse: false,
        })
        $('#dvSettingDateC').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true,
            forceParse:false,
        })

        function getDataEdit(id) {
            $.ajax({
                url: '@Url.RouteUrl(new {action = "ViewDetail", controller = "Contract" })',

                data: {
                    contract_id: id
                },
                type: 'GET',
                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $("#id").val(data.result.ObjReturn.ContractId);
                    $("#comboCompanyE").val(data.result.ObjReturn.CompanyId);
                    $("#conNameE").val(data.result.ObjReturn.ContractName);
                    $("#conStartDateE").val(data.result.ObjReturn.StartDate);
                    $("#conEndDateE").val(data.result.ObjReturn.EndDate);
                }

            });
            $('#EditModal').modal('show');
        }

        function createDevice() {
            var empObj = {
                AgencyId: @ViewData["ID"],
                DeviceTypeId: $('#comboDeviceType').val(),
                DeviceName: $('#dvNameC').val(),
                DeviceCode: $('#dvCodeC').val(),
                GuarantyStartDate: $('#dvGDateC').val(),
                GuarantyEndDate: $('#dvGEndDateC').val(),
                Ip: $('#dvIpC').val(),
                Port: $('#dvPortC').val(),
                DeviceAccount: $('#dvAccC').val(),
                DevicePassword: $('#dvPassC').val(),
                SettingDate: $('#dvSettingDateC').val(),
                Other: $('#dvOtherC').val(),
            }
             $.ajax({
                type: 'POST',
                url: '@Url.Action("CreateDevice", "Agency")',
                data: JSON.stringify(empObj),

                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function(data) {
                    $('#CreateModal').modal('hide');
                    if (!data.result.IsError) {
                        swal(data.result.SuccessMessage, "", "success");
                    }
                    else
                         swal(data.result.WarningMessage, "", "error");
                         loadDevice();
                }
            });
        }

</script>

}

