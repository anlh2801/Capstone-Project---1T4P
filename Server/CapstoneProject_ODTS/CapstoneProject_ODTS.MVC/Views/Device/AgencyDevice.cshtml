        function showCompanyAgency() {
            $('#comboCompanyAgency, #comboCompanyAgencyE')
                .find('option')
                .remove()
                .end();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetAgencyDetail", "Agency", new { agency_id = dataAgency })',
                data: {
                },

                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function(data) {
                    var obj = data.result.ObjReturn;
                    var html = '';
                    var htmlCompany ='';
                    if(obj != null) {
                        html += '<option value="' +
                            obj.AgencyId +
                            '">' +
                            obj.AgencyName +
                            '</option>';
                        htmlCompany += '<option value="' +
                            obj.CompanyId +
                            '">' +
                           obj.CompanyName +
                            '</option>';
                    }
                    $('#comboCompanyAgency').append(html);
                    $('#comboCompanyAgencyE').append(html);
                    $('#comboCompany').append(html);
                    $('#comboCompanyE').append(html);
                }
            });
        }
        function showDeviceType() {
            $('#comboDeviceType, #comboDeviceTypeE')
                .find('option')
                .remove()
                .end();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetAllDeviceType", "DeviceType")',
                data: {
                },

                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function(data) {
                    var obj = data.result.ObjReturn;
                    var html = '';
                    if(obj != null) {
                            for (var i = 0; i < obj.length; i++) {
                                    html += '<option value="' +
                                        obj[i].DeviceTypeId +
                                        '">' +
                                        obj[i].DeviceTypeName
                                        '</option>';
                                }
                    }
                    
                    $('#comboDeviceType').append(html);
                    $('#comboDeviceTypeE').append(html);
                }
            });
        }
        function getData(idd) {

            $.ajax({
                url: '@Url.RouteUrl(new {action = "ViewDetail", controller = "Device"})',

                data: {
                    device_id: idd
                },
                type: 'GET',
                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $("#dvName").text(data.result.ObjReturn.DeviceName);
                    $("#dvType").text(data.result.ObjReturn.DeviceTypeName);
                    $("#dvCode").text(data.result.ObjReturn.DeviceCode);
                    $("#dvGDate").text(data.result.ObjReturn.GuarantyStartDate);
                    $("#dvEndDate").text(data.result.ObjReturn.GuarantyEndDate);
                    $("#dvIp").text(data.result.ObjReturn.Ip);
                    $("#dvPort").text(data.result.ObjReturn.Port);
                    $("#dvAcc").text(data.result.ObjReturn.DeviceAccount);
                    $("#dvPass").text(data.result.ObjReturn.DevicePassword);
                    $("#dvSetupDate").text(data.result.ObjReturn.SettingDate);
                    $("#dvOther").text(data.result.ObjReturn.Other);
                    $("#dvLastEdit").text(data.result.ObjReturn.UpdateDate);
                }
            });
        $('#ViewModal').modal('show');
            }
        $('#dvGDateC').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true,
            forceParse: false,
            })
        $('#dvGEndDateC').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true,
            forceParse: false,
        })
        $('#dvSettingDateC').datepicker({
