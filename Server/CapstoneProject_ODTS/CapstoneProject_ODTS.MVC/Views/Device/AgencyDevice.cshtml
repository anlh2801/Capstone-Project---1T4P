        })
        $('#dvGEndDateE').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true,
            forceParse: false,
        })

        function getDataEdit(id) {
            $.ajax({
                url: '@Url.RouteUrl(new {action = "ViewDetail", controller = "Device" })',

                data: {
                    device_id: id
                },
                type: 'GET',
                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $("#id").val(data.result.ObjReturn.DeviceId);
                    $("#comboCompanyAgencyE").val(data.result.ObjReturn.AgencyId);
                    $("#comboDeviceTypeE").val(data.result.ObjReturn.DeviceTypeId);
                    $("#dvNameE").val(data.result.ObjReturn.DeviceName);
                    $("#dvCodeE").val(data.result.ObjReturn.DeviceCode);
                    $("#dvGDateE").val(data.result.ObjReturn.GuarantyStartDate);
                    $("#dvGEndDateE").val(data.result.ObjReturn.GuarantyEndDate);
                    $("#dvIpE").val(data.result.ObjReturn.Ip);
                    $("#dvPortE").val(data.result.ObjReturn.Port);
                    $("#dvAccE").val(data.result.ObjReturn.DeviceAccount);
                    $("#dvPassE").val(data.result.ObjReturn.DevicePassword);
                    $("#dvOtherE").val(data.result.ObjReturn.Other);
                }

            });
            $('#EditModal').modal('show');
        }

        function createDevice() {
            var empObj = {
                AgencyId: @ViewData["ID"],
                DeviceTypeId: $('#comboDeviceType').val(),
                DeviceName: $('#dvNameC').val(),
                DeviceCode: $('#dvCodeC').val(),
                GuarantyStartDate: $('#dvGDateC').val(),
                GuarantyEndDate: $('#dvGEndDateC').val(),
                Ip: $('#dvIpC').val(),
                Port: $('#dvPortC').val(),
                DeviceAccount: $('#dvAccC').val(),
                DevicePassword: $('#dvPassC').val(),
                SettingDate: $('#dvSettingDateC').val(),
                Other: $('#dvOtherC').val(),
            }
             $.ajax({
                type: 'POST',
                url: '@Url.Action("CreateDevice", "Agency")',
                data: JSON.stringify(empObj),

                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function(data) {
                    $('#CreateModal').modal('hide');
                    if (!data.result.IsError) {
                        swal(data.result.SuccessMessage, "", "success");
                    }
                    else
                         swal(data.result.WarningMessage, "", "error");
                         loadDevice();
                }
            });
        }
        function UpdateDevice() {
            var empObj = {
                DeviceId: $('#id').val(),
                DeviceTypeId: $('#comboDeviceTypeE').val(),
                DeviceName: $('#dvNameE').val(),
                DeviceCode: $('#dvCodeE').val(),
                GuarantyStartDate: $('#dvGDateE').val(),
                GuarantyEndDate: $('#dvGEndDateE').val(),
                Ip: $('#dvIpE').val(),
                Port: $('#dvPortE').val(),
                DeviceAccount: $('#dvAccE').val(),
                DevicePassword: $('#dvPassE').val(),
                Other: $('#dvOtherE').val(),
            }
            $.ajax({
                type: 'POST',
                url: '@Url.Action("UpdateDevice", "Device")',
                data: JSON.stringify(empObj),
                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $('#editModal').modal('hide');
                         if (!data.result.isError) {
                        swal(data.result.SuccessMessage, "", "success");
                        }
                        else
                        swal(data.result.WarningMessage, "", "error");
                    loadCompany();
                }
            });
        }
